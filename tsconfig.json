{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@store/*": ["app/store/*"],
      "@store": ["app/store"],
      "@styles/*": ["app/styles/*"],
      "@assets/*": ["assets/*"],
      "@entities": ["entity"],
      "@features": ["features"],
      "@pages/*": ["pages/*"],
      "@ui": ["shared/ui"],
      "@shared/*": ["shared/*"],
      "@widgets": ["widgets"]
    }
  },
  "include": ["src"]
}
